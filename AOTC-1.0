    color = COLOR_CODES.get(tag, '')
    endc = COLOR_CODES['ENDC']
    print(f"{color}[{tag}] {msg}{endc}")
    if DEBUG_ALL_LOGS:
        print(f"[DEBUG_ALL_LOGS][{tag}] {msg}")

