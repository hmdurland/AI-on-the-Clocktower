# --- LLM Input Tracking ---
LLM_INPUT_STATS = {
    "discussion": {"count": 0, "total_words": 0},
    "nomination": {"count": 0, "total_words": 0},
    "voting": {"count": 0, "total_words": 0},
    "fast_voting": {"count": 0, "total_words": 0},
